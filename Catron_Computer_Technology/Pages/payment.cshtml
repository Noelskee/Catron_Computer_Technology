 @page
@model Catron_Computer_Technology.Pages.paymentModel
@{
    ViewData["Title"] = "Payment";
}

@section Styles{
    <link rel="stylesheet" href="~/css/payment.css" asp-append-version="true" />
}

<div style="height: 100px;"></div>

<div class="pay">
    <!-- Animated Header -->
    <div class="checkout-header">
        <div class="header-icon">
            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
                <circle class="checkmark-circle" cx="26" cy="26" r="25" fill="none"/>
                <path class="checkmark-check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
            </svg>
        </div>
        <h1 class="fade-in-up">Secure Checkout</h1>
        <p class="subtitle fade-in-up">Complete your order in a few simple steps</p>
    </div>

    <!-- Two Column Layout -->
    <div class="checkout-columns">
        
        <!-- Left Column: Forms -->
        <div class="left-section">
            
            <!-- Delivery Address Section -->
            <div class="section delivery-section slide-in-left">
                <div class="section-header">
                    <div class="icon-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                    </div>
                    <h3>Delivery Address</h3>
                </div>
                
                <div id="address">
                    <div class="form-grid">
                        <div class="form-group full-width">
                            <label for="fullName">Full Name <span class="required">*</span></label>
                            <input type="text" id="fullName" placeholder="Enter your full name" required>
                        </div>
                        
                        <div class="form-group full-width">
                            <label for="address">Street Address <span class="required">*</span></label>
                            <input type="text" id="address" placeholder="House no., Street name" required>
                        </div>
                        
                        <div class="form-group full-width">
                            <label for="landmark">Landmark</label>
                            <input type="text" id="landmark" placeholder="Nearby landmark (optional)">
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email Address <span class="required">*</span></label>
                            <input type="email" id="email" placeholder="your.email@example.com" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="contact">Contact Number <span class="required">*</span></label>
                            <input type="tel" id="contact" placeholder="+63 912 345 6789" required>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Method Section -->
            <div class="section payment-section slide-in-left">
                <div class="section-header">
                    <div class="icon-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                            <line x1="1" y1="10" x2="23" y2="10"></line>
                        </svg>
                    </div>
                    <h3>Payment Method</h3>
                </div>
                
                <div class="payment-options">
                    <label class="payment-option">
                        <input type="radio" name="payment" value="Credit Card" checked>
                        <span class="payment-card">
                            <span class="payment-icon-wrapper">
                                <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 48 48'%3E%3Crect x='4' y='10' width='40' height='28' rx='4' fill='%23059669'/%3E%3Crect x='4' y='16' width='40' height='6' fill='%23047857'/%3E%3Crect x='8' y='26' width='12' height='4' rx='1' fill='%23d1fae5'/%3E%3Crect x='8' y='32' width='8' height='2' rx='1' fill='%23d1fae5'/%3E%3C/svg%3E" alt="Credit Card" class="payment-img">
                            </span>
                            <span class="payment-details">
                                <span class="payment-name">Credit Card</span>
                                <span class="payment-desc">Visa, Mastercard, etc.</span>
                            </span>
                        </span>
                        <span class="check-icon">✓</span>
                    </label>
                    
                    <label class="payment-option">
                        <input type="radio" name="payment" value="Debit Card">
                        <span class="payment-card">
                            <span class="payment-icon-wrapper">
                                <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 48 48'%3E%3Crect x='4' y='10' width='40' height='28' rx='4' fill='%2310b981'/%3E%3Crect x='4' y='16' width='40' height='6' fill='%23059669'/%3E%3Ccircle cx='12' cy='28' r='3' fill='%23fbbf24'/%3E%3Crect x='18' y='26' width='16' height='4' rx='1' fill='%23d1fae5'/%3E%3C/svg%3E" alt="Debit Card" class="payment-img">
                            </span>
                            <span class="payment-details">
                                <span class="payment-name">Debit Card</span>
                                <span class="payment-desc">Direct bank payment</span>
                            </span>
                        </span>
                        <span class="check-icon">✓</span>
                    </label>
                    
                    <label class="payment-option">
                        <input type="radio" name="payment" value="G Cash">
                        <span class="payment-card">
                            <span class="payment-icon-wrapper">
                                <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 48 48'%3E%3Crect x='8' y='4' width='32' height='40' rx='4' fill='%23059669'/%3E%3Crect x='12' y='8' width='24' height='4' rx='1' fill='%23d1fae5'/%3E%3Ctext x='24' y='28' font-family='Arial, sans-serif' font-size='16' font-weight='bold' fill='%23fff' text-anchor='middle'%3EG%3C/text%3E%3Ccircle cx='24' cy='34' r='2' fill='%2334d399'/%3E%3C/svg%3E" alt="GCash" class="payment-img">
                            </span>
                            <span class="payment-details">
                                <span class="payment-name">GCash</span>
                                <span class="payment-desc">Mobile wallet payment</span>
                            </span>
                        </span>
                        <span class="check-icon">✓</span>
                    </label>
                    
                    <label class="payment-option">
                        <input type="radio" name="payment" value="COD">
                        <span class="payment-card">
                            <span class="payment-icon-wrapper">
                                <img src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 48 48'%3E%3Crect x='10' y='14' width='28' height='20' rx='2' fill='%2310b981'/%3E%3Cpath d='M 18 14 L 18 10 Q 18 8 20 8 L 28 8 Q 30 8 30 10 L 30 14' fill='none' stroke='%23059669' stroke-width='2'/%3E%3Ctext x='24' y='28' font-family='Arial, sans-serif' font-size='14' font-weight='bold' fill='%23fff' text-anchor='middle'%3E₱%3C/text%3E%3C/svg%3E" alt="Cash on Delivery" class="payment-img">
                            </span>
                            <span class="payment-details">
                                <span class="payment-name">Cash on Delivery</span>
                                <span class="payment-desc">Pay when you receive</span>
                            </span>
                        </span>
                        <span class="check-icon">✓</span>
                    </label>
                </div>
                
                <div id="creditDebitInfo" class="card-info-section"></div>
            </div>
        </div>

        <!-- Right Column: Order Summary (IMPORTANT: JavaScript looks for .section with h3 containing "Product Ordered") -->
        <div class="right-section">
            <div class="section order-section slide-in-right sticky-summary">
                <div class="section-header">
                    <div class="icon-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="9" cy="21" r="1"></circle>
                            <circle cx="20" cy="21" r="1"></circle>
                            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                        </svg>
                    </div>
                    <h3>Product Ordered</h3>
                </div>
                
                <!-- Products will be inserted here by JavaScript -->
                <div class="product">
                    <div>Product Name</div>
                    <div>₱0</div>
                </div>
                <div class="product">
                    <div>Another Product</div>
                    <div>₱0</div>
                </div>
                
                <div class="total">Total: ₱0</div>

                <!-- Place Order Button -->
                <button class="place-order-btn slide-in-up" id="placeOrder" type="button">
                    <span class="btn-content">
                        <span>Place Order</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </span>
                    <span class="btn-shine"></span>
                </button>

                <!-- Security Badge -->
                <div class="security-badge fade-in">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                    <span>Secured by 256-bit SSL encryption</span>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/payment.js" asp-append-version="true"></script>
}

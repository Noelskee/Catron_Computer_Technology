@page
@model Catron_Computer_Technology.Pages.productsModel
@{
    ViewData["Title"] = "Product";
}

<link rel="stylesheet" href="~/css/product.css" />

<div class="products-hero">
    <div class="container">
        <h1 class="animate fade">Discover Our Products</h1>
        <p class="animate fade" data-delay="1">Find the perfect tech solutions for your needs</p>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Filter Sidebar -->
        <div class="col-lg-3 col-md-4">
            <div class="filter-sidebar animate slide-left">
                <h2 class="filter-title">
                    <i class="fas fa-filter"></i>
                    Filters
                </h2>

                <div class="accordion" id="filterAccordion">
                    <!-- Price Filter -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#priceFilter" aria-expanded="true">
                                <i class="fas fa-tag me-2"></i> Price Range
                            </button>
                        </h2>
                        <div id="priceFilter" class="accordion-collapse collapse show">
                            <div class="accordion-body">
                                <label for="customRange2" class="form-label">
                                    Max: ₱<span id="priceValue">100000</span>
                                </label>
                                <input type="range" class="form-range" min="0" max="100000"
                                       step="1000" value="100000" id="customRange2">
                                <div class="d-flex justify-content-between mt-2">
                                    <small class="text-muted">₱0</small>
                                    <small class="text-muted">₱100,000</small>
                                </div>
                                <div class="form-check mt-3">
                                    <input class="form-check-input" type="checkbox" id="priceCheck">
                                    <label class="form-check-label" for="priceCheck">Enable Price Filter</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Category Filter -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#categoryFilter">
                                <i class="fas fa-list me-2"></i> Categories
                            </button>
                        </h2>
                        <div id="categoryFilter" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter0" checked>
                                    <label class="form-check-label" for="filter0">All Products</label>
                                </div>

                                <h6 class="mt-3 mb-2 text-muted small">COMPUTER DEVICES</h6>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter1">
                                    <label class="form-check-label" for="filter1">
                                        <i class="fas fa-laptop me-1"></i> Laptops
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter2">
                                    <label class="form-check-label" for="filter2">
                                        <i class="fas fa-desktop me-1"></i> Desktops
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter3">
                                    <label class="form-check-label" for="filter3">
                                        <i class="fas fa-mobile-alt me-1"></i> Mobile Devices
                                    </label>
                                </div>

                                <h6 class="mt-3 mb-2 text-muted small">SUPPLIES</h6>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter4">
                                    <label class="form-check-label" for="filter4">
                                        <i class="fas fa-book me-1"></i> School Supplies
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter5">
                                    <label class="form-check-label" for="filter5">
                                        <i class="fas fa-briefcase me-1"></i> Office Supplies
                                    </label>
                                </div>

                                <h6 class="mt-3 mb-2 text-muted small">TECH COMPONENTS</h6>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter6">
                                    <label class="form-check-label" for="filter6">
                                        <i class="fas fa-code me-1"></i> Software
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter7">
                                    <label class="form-check-label" for="filter7">
                                        <i class="fas fa-microchip me-1"></i> Hardware
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="filter8">
                                    <label class="form-check-label" for="filter8">
                                        <i class="fas fa-print me-1"></i>Printers
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary w-100 mt-4" id="resetFilters">
                    <i class="fas fa-redo me-2"></i>Reset Filters
                </button>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9 col-md-8">
            <div class="sort-section animate fade" data-delay="1">
                <div class="results-count">
                    Showing <strong id="productCount">0</strong> products
                </div>
                <select class="form-select" style="width: 200px;" id="sortSelect">
                    <option value="featured">Sort by: Featured</option>
                    <option value="price-low">Price: Low to High</option>
                    <option value="price-high">Price: High to Low</option>
                    <option value="name-az">Name: A to Z</option>
                    <option value="name-za">Name: Z to A</option>
                </select>
            </div>

            <div id="pContainer">
                <!-- Products will be loaded here -->
                <div class="text-center p-5">
                    <div class="spinner-border text-success" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Loading products...</p>
                </div>
            </div>

            <div class="no-products" id="noProducts" style="display: none;">
                <i class="fas fa-box-open"></i>
                <h3>No products found</h3>
                <p>Try adjusting your filters or search criteria</p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="module" src="~/js/productsContainer.js" asp-append-version="true"></script>
}


@page
@model Catron_Computer_Technology.Pages.productOverviewModel
@{
    ViewData["Title"] = "Product Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/productOverview.css" />
}

<div style="height: 100px;"></div>

<!-- Product Details Container -->
<div class="product-container">
    <div class="product-wrapper">
        
        <!-- Left Side - Image Gallery -->
        <div class="product-gallery">
            <div class="main-image-wrapper">
                <img id="image" src="../image/products/0.jpg" alt="Product Image" class="main-product-image">
                <div class="image-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                    <span>Verified Product</span>
                </div>
            </div>
        </div>

        <!-- Right Side - Product Info -->
        <div class="product-info">
            
            <!-- Product Title -->
            <div class="product-header">
                <h1 id="title" class="product-title">Loading Product...</h1>
                <div class="product-rating">
                    <div class="stars">
                        <i class="star-icon">★</i>
                        <i class="star-icon">★</i>
                        <i class="star-icon">★</i>
                        <i class="star-icon">★</i>
                        <i class="star-icon half">★</i>
                    </div>
                    <span class="rating-text">(4.5 / 5.0)</span>
                </div>
            </div>

            <!-- Price Section -->
            <div class="price-section">
                <div class="price-wrapper">
                    <span class="currency">₱</span>
                    <span id="price" class="price-amount">0.00</span>
                </div>
                <div class="stock-badge">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>In Stock</span>
                </div>
            </div>

            <!-- Description -->
            <div class="description-section">
                <h3 class="section-label">Product Description</h3>
                <p id="description" class="product-description">Loading description...</p>
            </div>

            <!-- Options Section -->
            <div class="options-section">
                <h3 id="option" class="section-label">Options:</h3>
                <div id="optionHolder" class="options-grid">
                    <!-- Options will be added here by JavaScript -->
                </div>
            </div>

            <!-- Quantity Section -->
            <div class="quantity-section">
                <h3 class="section-label">Quantity</h3>
                <div class="quantity-controls">
                    <button type="button" class="quantity-btn minus quantityBtn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                    </button>
                    <span id="quantity" class="quantity-display">1</span>
                    <button type="button" class="quantity-btn plus quantityBtn">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button type="button" id="addCart" class="add-to-cart-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                    <span>Add to Cart (₱0.00)</span>
                    <span class="btn-shine"></span>
                </button>
                
                <button type="button" class="wishlist-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                </button>
            </div>

            <!-- Features -->
            <div class="features-section">
                <div class="feature-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                    </svg>
                    <div class="feature-text">
                        <strong>Free Delivery</strong>
                        <span>On orders over ₱1,000</span>
                    </div>
                </div>
                
                <div class="feature-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    </svg>
                    <div class="feature-text">
                        <strong>Easy Returns</strong>
                        <span>30-day return policy</span>
                    </div>
                </div>
                
                <div class="feature-item">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                    <div class="feature-text">
                        <strong>Secure Payment</strong>
                        <span>256-bit SSL encryption</span>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>

@section Scripts {
    <script src="~/js/product.js" asp-append-version="true"></script>
}
